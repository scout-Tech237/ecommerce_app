<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">

        <ImageView
            android:id="@+id/cart_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:layout_centerVertical="true"
            android:src="@drawable/veg_1" />

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/cart_image"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="0dp"
            android:layout_toEndOf="@+id/cart_image"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:text="Pyrus Communis"
                android:textColor="@color/black_color"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/subtract"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:background="@drawable/green_btn"
                    android:fontFamily="@font/poppins_medium"
                    android:text="-"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/cart_nbr_items"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:background="@drawable/gray_btn"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black_color" />

                <Button
                    android:id="@+id/add_btn"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginHorizontal="@dimen/_2sdp"
                    android:background="@drawable/green_btn"
                    android:fontFamily="@font/poppins_medium"
                    android:text="+"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cart_product_price"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_12sdp"
            android:text="$6.22"
            android:textColor="@color/black_color"/>

    </RelativeLayout>
    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>