<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.DashboardFragments.Profile">

    <LinearLayout
        android:id="@+id/profile_info"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="@color/bg_color">

        <androidx.appcompat.widget.Toolbar
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/toolbar_title"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_14sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#000000"
                android:layout_gravity="center" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:paddingHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_marginVertical="@dimen/_2sdp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/card_color"
                app:cardElevation="2dp"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_height="50dp">
                <LinearLayout
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Name"
                        android:textAllCaps="true"
                        android:textColor="@color/black_color"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/number_view"
                android:layout_marginVertical="@dimen/_2sdp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/card_color"
                app:cardElevation="2dp"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:layout_height="50dp">
                <LinearLayout
                    android:paddingHorizontal="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/user_mobile_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Number"
                        android:textColor="@color/black_color"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <ScrollView
            android:paddingHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_height="40dp">

                        <LinearLayout
                            android:id="@+id/my_orders_layout"
                            android:paddingHorizontal="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_14sdp"
                                android:fontFamily="@font/poppins_medium"
                                android:text="My Orders"
                                android:textColor="@color/black_color"/>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"/>
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="8dp"
                                app:cardBackgroundColor="@color/green_color"
                                app:cardElevation="1dp"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                >
                                <ImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/forward_icon"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_height="40dp">


                    <LinearLayout
                        android:id="@+id/account_setting"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Account Settings"
                            android:textColor="@color/black_color"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/setting"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/green_color"
                            app:cardElevation="1dp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forward_icon"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/promo_codes"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Promo Codes"
                            android:textColor="@color/black_color"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/green_color"
                            app:cardElevation="1dp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forward_icon"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/help_desk"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Help"
                            android:textColor="@color/black_color"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/green_color"
                            app:cardElevation="1dp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forward_icon"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_marginVertical="@dimen/_2sdp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/card_color"
                    app:cardElevation="2dp"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:layout_height="40dp">
                    <LinearLayout
                        android:id="@+id/refer_friend"
                        android:paddingHorizontal="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_14sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Refer to Friend"
                            android:textColor="@color/black_color"/>
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="@color/green_color"
                            app:cardElevation="1dp"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            >
                            <ImageView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/forward_icon"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:textColor="@color/text_gay_color"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Share app with your friends"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5sdp">
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_2sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#DAF2D1"
                    app:cardElevation="2dp"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fb_green_icon"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_2sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#DAF2D1"
                    app:cardElevation="2dp"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/twit_green_icon"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_margin="@dimen/_2sdp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#DAF2D1"
                    app:cardElevation="2dp"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/in__green_icon"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/logout_user"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginHorizontal="@dimen/_40sdp"
                    android:background="@drawable/green_btn"
                    android:text="Logout"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins"
                    android:textSize="@dimen/_12sdp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lead_to_sign_in"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Splash"
        android:visibility="invisible">

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_weight="7"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:letterSpacing="0.5"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:text="Welcome"
                    android:textSize="14sp"/>

                <TextView
                    android:letterSpacing="0.1"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:text="GOURMETURCA.COM"
                    android:textSize="32sp"/>

                <TextView
                    android:letterSpacing="0.5"
                    android:fontFamily="@font/poppins_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:text="Get your groceries right away."
                    android:textSize="14sp"
                    android:gravity="center"/>

                <Button
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/login_btn"
                    android:background="@drawable/login_btn"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginHorizontal="@dimen/_45sdp"
                    android:text="Log in"
                    android:textColor="@color/black_color"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/getStartedBtn"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/poppins"
                    android:background="@drawable/green_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_marginHorizontal="@dimen/_45sdp"
                    android:text="Get Started"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    />


                <ImageView
                    android:src="@drawable/splach_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginHorizontal="@dimen/_50sdp"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

