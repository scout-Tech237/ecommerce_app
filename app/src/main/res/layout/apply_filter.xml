<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:padding="@dimen/_5sdp"
    android:background="@drawable/bottom_nav_shap"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:padding="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/hide_filter"
            android:layout_margin="1dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/green_color"
            app:cardElevation="2dp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            >
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xmark"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/toolbar_title"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_14sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:textColor="#000000"
            android:layout_gravity="center" />

        <TextView
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:id="@+id/skip"
            android:fontFamily="@font/poppins"
            android:textSize="@dimen/_14sdp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:text="Clear"
            android:textColor="@color/green_color"
            android:layout_gravity="right" />



    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Categories"
        android:textColor="@color/black_color"/>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Vegetables"/>
            <CheckBox
                android:checked="true"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fruits"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Meat"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Egg"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Fish"/>
            <CheckBox
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Bread"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Nuts"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Honey"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Wheat"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Rice"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Cheese"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Milk"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Oil"/>
            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Pasta"/>

            <CheckBox
                android:checked="false"
                android:button="@drawable/check_box"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Coffee Beans"/>

        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:background="@drawable/green_btn"
        android:text="Apply"
        android:textAllCaps="false"
        android:textColor="@color/white"/>

</LinearLayout>